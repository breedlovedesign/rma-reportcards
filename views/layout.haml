-# coding: utf-8
!!!
%html
	%head
		%link( rel="shortcut icon" href="/favicon.ico" type="image/x-icon")
		%link( rel="icon" href="/favicon.ico" type="image/x-icon")
		%title= @title
		%meta{ :charset => "utf-8" }
		%meta{ :content => "", :name => "description" }
		%meta{ :content => "", :name => "author" }
		%link(type="text/css" rel="stylesheet" href="/css/common.css")
	%body	
		%section
			%header.top
				%h2.top= @title.upcase unless @title.nil?
				%h2.top#warning= "SET THE GRADING PERIOD" if $current_quarter.nil?
				%h2.top #{(GradingPeriod.find($current_quarter).name).upcase unless $current_quarter.nil?}
				%div.nav
					=render_navigation
			%article
				= yield
				%footer.foot
					.footer
